<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/spacing_2"
    android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_horden"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@color/overlay_dark_10"
                android:scaleType="fitXY"
                android:src="@drawable/alvine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/overlay_dark_35"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/spacing_5">

                <TextView
                    android:id="@+id/tv_name_horden"
                    style="@style/textName"
                    android:text="Nama" />
                <TextView
                    android:id="@+id/tv_spesifikasi"
                    style="@style/textSpesifikasi"
                    android:text="Spesifikasi" />
                <TextView
                    android:id="@+id/tv_harga"
                    style="@style/textHarga"
                    android:text="Rp. 99999999" />

            </LinearLayout>
        </RelativeLayout>

</LinearLayout>